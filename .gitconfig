[user]
    name = micxer
    email = {{e@mail.adr}}

[alias]
    st = status
    lg = log --name-only
    ci = commit
    pl = pull
    ps = push
    co = checkout
    com = checkout master
    rbi = rebase --interactive
    rbm = rebase master
    ups = log --graph --date-order --pretty=tformat:\"%C(yellow)%h%Creset %C(magenta)%aE %ai%Creset %C(green bold)%d%Creset%n        %s\" --boundary --all --not --remotes --tags
    ap = add --patch
    dc = diff --cached
    df = diff --no-ext-diff
    dfe = diff --ext-diff
    cp = cherry-pick
    br = branch
    go = log --graph --date-order --pretty=tformat:\"%C(yellow)%h%Creset %C(magenta)%aE %ai%Creset %C(green bold)%d%Creset%n        %s\" --boundary @{u}..
    g = log --graph --date-order --pretty=tformat:\"%C(yellow)%h%Creset %C(magenta)%aE %ai%Creset %C(green bold)%d%Creset%n        %s\" --boundary --all
    gb = log --graph --date-order --pretty=tformat:\"%C(yellow)%h%Creset %C(magenta)%aE %ai%Creset %C(green bold)%d%Creset%n        %s\" --boundary
    gbnb = log --graph --date-order --pretty=tformat:\"%C(yellow)%h%Creset %C(magenta)%aE %ai%Creset %C(green bold)%d%Creset%n        %s\"

[core]
    editor = vim

[color]
    ui = true
    status = auto
    branch = auto
    interactive = auto
    diff = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[push]
    default = current

[pull]
    rebase = true
    default = current

[branch]
    autosetuprebase = always

[help]
    autocorrect = true

[difftool]
    prompt = true
